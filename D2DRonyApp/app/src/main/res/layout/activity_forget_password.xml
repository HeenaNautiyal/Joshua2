<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.heena.d2dronyapp.ForgetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay1"
        android:layout_below="@+id/image"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#3D3c3A"
            android:textSize="16dp"
            android:paddingLeft="6dp"
            android:text=""/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="italic"
            android:id="@+id/Text1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Forget Password..."
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginTop="60dp"
            android:text="Enter the registered email address used to sign up the D2D Mobile Application"
            android:layout_weight="0.03" />

        <EditText android:layout_width="fill_parent"

            android:layout_height="60dp"
            android:layout_marginTop="10dip"
            android:id="@+id/email"
            android:hint="Enter your registered email id."
            android:paddingLeft="4dp"
            android:textColorHint="#ffffff"
            android:background="@drawable/gradient2"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="26dp"
            android:paddingStart="16dp"
            android:layout_marginLeft="26dp"
            android:singleLine="true"/>

        <Button android:id="@+id/btnsubmit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient2"
            android:layout_marginBottom="10dp"
            android:textSize="24dp"
            android:layout_marginRight="26dp"
            android:layout_marginLeft="26dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:textColor="@color/text_shadow"
            android:text="Submit"/>
    </LinearLayout>
</RelativeLayout>
