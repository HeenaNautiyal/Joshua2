<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:id="@+id/widget31"
    android:background="@drawable/spalsh_1"
    android:orientation="vertical"
    android:weightSum="3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/iv_tv"
            android:layout_width="80dp"
            android:layout_height="132dp"
            android:layout_weight="1"
            android:background="@drawable/app_icon" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"></View>

        <ImageView
            android:id="@+id/iv_contact"
            android:layout_width="80dp"
            android:layout_height="142dp"
            android:layout_weight="1"
            android:background="@drawable/icon_4"
            android:paddingTop="10dp" />


    </LinearLayout>

    <TableRow

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:id="@+id/i_tvshow"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="#ffffff"
        android:layout_marginLeft="8dp"></TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="142dp"
            android:id="@+id/iv_classes"
            android:background="@drawable/icon_5"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffffff"></View>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="142dp"
            android:id="@+id/iv_about"
            android:background="@drawable/icon_3"
            android:layout_weight="1"/>



    </LinearLayout>

    <TableRow
        android:id="@+id/hr1"
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_marginLeft="8dp"></TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="142dp"
            android:id="@+id/iv_share"
            android:background="@drawable/icon_2"
            android:layout_weight="1"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffffff"></View>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="142dp"
            android:id="@+id/iv_rate"
            android:background="@drawable/icon_3"
            android:layout_weight="1"/>



    </LinearLayout>

</LinearLayout>