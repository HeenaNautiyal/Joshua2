<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.heena.D2dmedicine.Admincla">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/admin"
    android:background="#015480">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="0.4"
        android:id="@+id/imgback"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/back2_icon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Contact Admin"
        android:paddingLeft="20dp"
        android:layout_weight="0.95"
        android:layout_marginTop="6dp"
        android:textColor="#ffffff"
        android:textSize="26dp"/>
</LinearLayout>


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/content1"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/gradient2"
        android:orientation="vertical"
        android:layout_above="@+id/content2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Email"
    android:textSize="20dp"
    android:paddingLeft="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:textColor="@color/white"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="#d3d3d3"
            android:paddingLeft="10dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"/>
</LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/content2"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/gradient2"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_above="@+id/button"
        android:layout_alignLeft="@+id/content1"
        android:layout_alignStart="@+id/content1"
        android:layout_marginBottom="94dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remark"

        android:paddingLeft="10dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/addr_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:lines="20"
        android:layout_marginRight="20dp"
        android:minLines="5"
        android:paddingLeft="10dp"
        android:textColorHint="#d3d3d3"
        android:textColor="@color/white"
        android:hint="Remark"
        android:scrollHorizontally="false"
        android:scrollbars="vertical"
        android:singleLine="false" />

</LinearLayout>

</RelativeLayout>
