<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/shapelayout1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:divider="?android:listDivider"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/i_podcast"
                        android:layout_width="fill_parent"
                        android:layout_height="70dp"
                        android:layout_weight="1"

                        android:scaleType="center"
                        android:src="@drawable/icon_7" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/i_quantum"
                        android:layout_width="40dp"
                        android:layout_height="70dp"
                        android:layout_gravity="top"
                        android:layout_weight="0.50"
                        android:scaleType="center"
                        android:src="@drawable/icon_6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/groupnam"
                        android:layout_width="0dp"
                        android:layout_height="50px"
                        android:layout_weight="0.51"
                        android:paddingLeft="20px"
                        android:textColor="#000000"
                        android:textSize="16px"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/i_comunity"
                        android:layout_width="40dp"
                        android:layout_height="70dp"
                        android:layout_gravity="top"
                        android:layout_weight="0.50"
                        android:scaleType="center"
                        android:src="@drawable/icon_8" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/i_freehealing"
                        android:layout_width="40dp"
                        android:layout_height="70dp"
                        android:layout_gravity="top"
                        android:layout_weight="0.50"
                        android:scaleType="center"
                        android:src="@drawable/icon_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="0dp"
                        android:layout_height="50px"
                        android:layout_weight="0.51"
                        android:paddingLeft="20px"
                        android:textColor="#000000"
                        android:textSize="16px"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/i_more"
                        android:layout_width="40dp"
                        android:layout_height="70dp"
                        android:layout_gravity="top"
                        android:layout_weight="0.50"
                        android:scaleType="center"
                        android:src="@drawable/icon_9"  />

                </LinearLayout>


            </LinearLayout>


