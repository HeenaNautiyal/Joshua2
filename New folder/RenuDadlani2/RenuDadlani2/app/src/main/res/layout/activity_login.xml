<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/splash2"
    android:orientation="vertical"
    android:id="@+id/lay1"
    android:weightSum=".99"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_back"
        android:layout_gravity="center"
        android:background="@drawable/logo2" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
           
        <LinearLayout
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/linearLayout">

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/ed_lastName"
                android:textColor="#000000"
                android:hint="Email"
                android:gravity="center"
                android:background="@drawable/gradient2"
                android:textColorHint="#808080"
                android:textSize="15dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="36dp"
                />

            <EditText
                android:layout_marginTop="36dp"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:id="@+id/ed_password"
                android:textColor="#000000"
                android:hint="Password"
                android:layout_marginLeft="3dp"
                android:paddingLeft="10dp"
                android:ellipsize="end"
                android:inputType="textPassword"
                android:textColorHint="#808080"
                android:background="@drawable/gradient2"
                android:gravity="center"
                android:textSize="15dp"
                />
            <View
                android:id="@+id/SplitLine_hor3"
                android:layout_width="match_parent"
                android:layout_height= "1dp"
                android:layout_below="@+id/message"
                android:layout_marginTop="10dp"
                android:background="@color/text_shadow" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/ed_country"
                android:id="@+id/fgpwd"
                android:text="ForgotPassword?"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>


            <com.facebook.login.widget.LoginButton
                xmlns:fb="http://schemas.android.com/apk/res-auto"
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                fb:logout_text="Log in with Facebook"
                android:layout_marginBottom="30dp" />

            <Button
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:text="Submit"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textAllCaps="false"
                android:id="@+id/btn_Submit"
                android:textColor="#ffffff"
                android:background="#000000"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_below="@+id/login_button"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>