<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:layout_marginTop="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center_horizontal"
            >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:paddingRight="20dp"
               android:paddingLeft="20dp"
               android:layout_marginTop="36dp"
               android:weightSum="3">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/ed_lastName"
                android:textColor="#000000"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:hint="First Name"
                android:paddingTop="12dp"
                android:paddingLeft="10dp"
                android:textColorHint="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:background="@drawable/gradient2"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/ed_firstName"
                android:textColor="#000000"
                android:hint="Last Name"
                android:paddingLeft="10dp"
                android:ellipsize="end"
                android:paddingTop="12dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:textColorHint="#000000"
                android:background="@drawable/gradient2"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ed_lastName"
                android:layout_alignLeft="@+id/ed_lastName"
                android:layout_alignStart="@+id/ed_lastName" />


            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/ed_email"
                android:textColor="#000000"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:paddingTop="12dp"
                android:textColorHint="#000000"
                android:background="@drawable/gradient2"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_below="@+id/ed_firstName"
                android:layout_alignRight="@+id/ed_firstName"
                android:layout_alignEnd="@+id/ed_firstName" />
            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/ed_password"
                android:textColor="#000000"
                android:hint="Password"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:ellipsize="end"
                android:paddingTop="12dp"
                android:textColorHint="#000000"
                android:background="@drawable/gradient2"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_below="@+id/ed_email"
                android:layout_alignLeft="@+id/ed_email"
                android:layout_alignStart="@+id/ed_email" />

            <Button
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:id="@+id/btn_Submit"
                android:textColor="#ffffff"
                android:background="#000000"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_below="@+id/ed_password"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>