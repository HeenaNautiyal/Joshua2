<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:descendantFocusability="beforeDescendants">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:background="@drawable/gradient2"
        android:layout_alignParentLeft="true"
        android:paddingBottom="4dp"
        android:paddingRight="15dp"
       >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lay111"
            android:weightSum="3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/image_upload"
                android:background="@drawable/shape"
                android:scaleType="fitXY"
                android:textAlignment="center"
                android:src="@drawable/bandaid1"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_width="279dp"
                android:layout_height="100dp"
                android:orientation="vertical">
                <TextView
            android:id="@+id/tvName"
            android:paddingLeft="6dp"
            android:layout_marginTop="4dp"
            android:textSize="20dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BAND-AID"
            android:textColor="#ffffff"
            android:textAppearance="?android:attr/textAppearanceLarge" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/tvmanufacture"
                    android:paddingLeft="6dp"
                    android:layout_below="@+id/lay111"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manufactured By"
                    android:textColor="#000000"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/tvdescription"
                    android:paddingLeft="6dp"
                    android:layout_below="@+id/lay111"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Composition: abc"
                    android:textColor="#000000"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/added"
                    android:paddingLeft="6dp"
                    android:layout_below="@+id/lay111"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Added By: abc"
                    android:textColor="#000000"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>

            </LinearLayout>
                 </LinearLayout>

    </LinearLayout>

        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chk"
            android:layout_gravity="right|top" />
    </FrameLayout>
</LinearLayout>
