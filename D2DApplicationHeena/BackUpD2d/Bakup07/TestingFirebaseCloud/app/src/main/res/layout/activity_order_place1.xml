<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#015480">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgback"
            android:layout_marginTop="4dp"
            android:src="@drawable/back2_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="22dp"
            android:text="View Chemist Details."
            android:layout_above="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView5" />


        <ImageView
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/layoutdesign"
        android:layout_below="@id/layoutTop" >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/close1"
            android:scaleType="fitCenter"
            android:layout_gravity="right"
            android:layout_marginRight="4dp"
            android:src="@drawable/close"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:id="@+id/linearLayout3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="26dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/name"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Order Details"/>
        </LinearLayout>

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layOUT1"
            android:layout_below="@+id/linearLayout3"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layOUT2"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/layout3"
                    android:weightSum="5"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/lay1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/date1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="16dp"
                                android:textColor="#015480"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"
                                android:text="OrderNumber:"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:id="@+id/ordernumber"
                            android:textColor="#000000"
                            android:layout_gravity="left"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="38dp"
                            android:text="12"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/SplitLine_hor3"
                        android:layout_width="match_parent"
                        android:layout_height= "1dp"
                        android:layout_below="@+id/lay1"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/lay2"
                        android:layout_marginTop="6dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/phone"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="16dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="#015480"
                                android:layout_height="wrap_content"
                                android:text="Medicine: "/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:id="@+id/medicine"
                            android:textColor="#000000"
                            android:layout_gravity="left"
                            android:layout_marginLeft="38dp"
                            android:layout_height="wrap_content"
                            android:text="Saridon,Brufin"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height= "1dp"
                        android:layout_below="@+id/lay1"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/lay3"
                        android:layout_marginTop="6dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/prescription"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="16dp"
                                android:layout_marginTop="1dp"
                                android:textColor="#015480"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"
                                android:text="Quantity:"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:id="@+id/Quantity"
                            android:textColor="#000000"
                            android:layout_marginLeft="38dp"
                            android:layout_gravity="left"
                            android:layout_height="wrap_content"
                            android:text="2"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height= "1dp"
                        android:layout_below="@+id/lay1"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/lay6"
                        android:layout_marginTop="6dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/address2"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="16dp"
                                android:layout_marginTop="1dp"
                                android:textColor="#015480"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"
                                android:text="Address:"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:id="@+id/edaddress"
                            android:textColor="#000000"
                            android:layout_marginLeft="38dp"
                            android:layout_gravity="left"
                            android:layout_height="wrap_content"
                            android:text=""/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:id="@+id/edcity"
                            android:textColor="#000000"
                            android:layout_marginLeft="38dp"
                            android:layout_gravity="left"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                    <View
                        android:id="@+id/SplitLine_hor4"
                        android:layout_width="match_parent"
                        android:layout_height= "1dp"
                        android:layout_below="@+id/lay1"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/lay4"
                        android:layout_marginTop="2dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/mail"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="16dp"
                                android:layout_marginTop="1dp"
                                android:textColor="#015480"
                                android:layout_marginLeft="10dp"
                                android:layout_height="wrap_content"
                                android:text="Email:"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:id="@+id/mail2"
                            android:textColor="#000000"
                            android:layout_marginLeft="38dp"
                            android:layout_gravity="left"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/lay4"
                        android:layout_below="@+id/lay3"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="20dp"
                            android:background="@color/colorAccent"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="Your order will be confirmed chemist will contact you soon."/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height= "1dp"
                        android:layout_below="@+id/lay1"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/lay5"
                        android:layout_marginTop="6dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="16dp"
                            android:id="@+id/Address"
                            android:textColor="#000000"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Stay connected with us"/>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>



</RelativeLayout>

