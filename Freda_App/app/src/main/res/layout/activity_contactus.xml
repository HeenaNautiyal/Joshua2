<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.administrator.freda_app.Registration">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:gravity="center_horizontal"
        android:background="#ffffff"
        android:id="@+id/lay1"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="1.36"
                android:background="#ffffff">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/homenew"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/action_bar_back"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".36"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/header_3x"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/imageView1"
                    android:layout_marginTop="4dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_weight="1.28"
                android:background="#ffffff">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logout"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="18dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:id="@+id/logout"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

<!--inner form layout-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#d3d3d3"
        android:id="@+id/lay2"
        android:layout_below="@+id/lay1"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="#8A1A27">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Fill out the form below "
                    android:textColor="#ffffff"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    />

            </LinearLayout>
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    >
                    <!--  FirstName-->
                    <EditText android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:background="@drawable/edittext"
                        android:layout_marginBottom="20dp"
                        android:paddingTop="4dp"
                        android:hint="First Name*"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:textColorHint="#D3D3D3"
                        android:paddingBottom="4dp"
                        android:paddingLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:id="@+id/ed_firstname"
                        android:singleLine="true"/>
                    <!--    LastName-->

                    <EditText android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:paddingTop="4dp"
                        android:hint="Last Name*"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                        android:textColorHint="#D3D3D3"
                        android:paddingBottom="4dp"
                        android:paddingLeft="4dp"
                        android:background="@drawable/edittext"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="4dp"
                        android:id="@+id/ed_lastname"
                        android:singleLine="true"/>

                    <!--  Email Label -->

                    <EditText android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:id="@+id/ed_mail"
                         android:paddingTop="4dp"
                        android:hint="Email*"
                        android:paddingBottom="4dp"
                        android:paddingLeft="4dp"
                        android:textColorHint="#D3D3D3"
                        android:background="@drawable/edittext"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="4dp"
                        android:singleLine="true"/>
                    <!--  Password Label -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginRight="28dp"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="28dp"
                            android:layout_weight="1">

                        </LinearLayout>

                    </LinearLayout>

                    <EditText android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:id="@+id/ed_message"
                        android:paddingTop="2dp"
                        android:hint="Message*"
                        android:paddingBottom="4dp"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:gravity="top"
                        android:paddingLeft="4dp"
                        android:textColorHint="#D3D3D3"
                        android:background="@drawable/edittext"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="4dp"
                        android:singleLine="true"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:layout_marginRight="4dp"
                           >
                            <Button android:id="@+id/btnLogin"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:background="#8A1A27"
                                android:layout_marginBottom="4dp"
                                android:textSize="18dp"
                                android:gravity="center"
                                android:paddingTop="6dp"
                                android:textAllCaps="false"
                                android:paddingBottom="6dp"
                                android:textColor="#ffffff"
                                android:text="Submit"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <!--//Social media icons-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay2"
        android:paddingLeft="14dp"
        android:paddingRight="8dp"
        android:layout_alignLeft="@+id/lay2"
        android:layout_alignStart="@+id/lay2"
        android:layout_alignRight="@+id/lay2"
        android:layout_alignEnd="@+id/lay2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_below="@+id/lay2"
            android:layout_height="fill_parent"
            android:layout_weight="1"
                     android:gravity="bottom"
            >
            <ImageView
                android:id="@+id/i_facebook"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@mipmap/ic_facebooknew" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
                      android:gravity="bottom"
            >
            <ImageView
                android:id="@+id/i_pinint"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@mipmap/ic_pinterestnew" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"

            android:gravity="bottom"
            >
            <ImageView
                android:id="@+id/i_twi"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@mipmap/ic_twitternew" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"

            android:gravity="bottom"
            >
            <ImageView
                android:id="@+id/i_insta"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@mipmap/ic_instagramnew" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"

            android:gravity="bottom"
            >
            <ImageView
                android:id="@+id/i_you"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@mipmap/ic_youtubenew" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            >
            <ImageView
                android:id="@+id/i_google"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@mipmap/ic_googlenew" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>