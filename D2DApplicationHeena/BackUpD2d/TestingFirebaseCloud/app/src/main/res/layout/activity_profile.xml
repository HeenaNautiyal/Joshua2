<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:background="#015480">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:scaleType="fitEnd"
            android:src="@drawable/door"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:text="View Profile."
            android:layout_above="@+id/imageView2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textSize="22dp"
            android:text="Heena Nautiyal"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView3" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layoutTop" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/linearLayout3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/mail"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="#015480"
            android:layout_height="wrap_content"
            android:text="Email:"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:id="@+id/mail"
                android:textColor="#000000"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:text="heenanutiyalcse@gmail.com"/>
        </LinearLayout>
        <View
            android:id="@+id/SplitLine_hor4"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linearLayout3"
            android:background="#000000"
            />
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignStart="@+id/linearLayout3"
            android:id="@+id/linearLayout4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/phone"/>
        <TextView
            android:layout_width="91dp"
            android:textSize="16dp"
            android:textColor="#015480"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Number:"/>
            </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:id="@+id/number"

            android:textColor="#000000"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:text="1234567890"/>
    </LinearLayout>
        <View
            android:id="@+id/SplitLine_hor3"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linearLayout4"
            android:background="#000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignLeft="@+id/linearLayout4"
            android:layout_alignStart="@+id/linearLayout4"
            android:id="@+id/linearLayout5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/address2"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:textColor="#015480"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="Address:"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:textColor="#000000"
                android:id="@+id/address"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:text="Hno.94"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:textColor="#000000"
                android:id="@+id/pincode"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:text="121003"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>