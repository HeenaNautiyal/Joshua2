<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.heena.d2dronyapp.Confirm">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_gravity="left"
        android:background="@drawable/back_icon"
        android:layout_alignParentLeft="true"
        android:id="@+id/backbtn"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:id="@+id/image1"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/image1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="4"
            android:orientation="vertical"
            android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_marginTop="8dp"
    android:text="ORDER DISCRIPTION"
    android:layout_gravity="center_horizontal" />

            <View
                android:id="@+id/SplitLine_hor3"
                android:layout_width="219dp"
                android:layout_height= "1dp"
                android:layout_below="@+id/message"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:background="#080808" />

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1.3"

                    android:layout_height="60dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="Medicine: "
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight=".7"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Medicine: "
                        android:gravity="left"
                        android:id="@+id/tv1"
                        android:paddingLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="18dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1.3"
                    android:layout_height="60dp">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:text="Manufacturer:"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textSize="18dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight=".7"
                    android:layout_height="100dp">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Medicine: "
                        android:id="@+id/tv2"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:gravity="left"
                        android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1.3"
                    android:layout_height="60dp">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:text="Store:"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:textSize="18dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight=".7"
                    android:layout_height="100dp">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Medicine: "
                        android:gravity="left"
                        android:id="@id/teview"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight="1.3"
                    android:layout_height="60dp">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:text="Quantity:"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:textSize="18dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_weight=".7"
                    android:layout_height="60dp">
                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/Spinenr"
                        android:paddingLeft="10dp"
                        android:gravity="left"
                        android:entries="@array/country_arrays"
                        android:prompt="@string/spinner_title"
                        />

                </LinearLayout>

            </LinearLayout>
            <Button
                android:layout_width="fill_parent"
                android:id="@+id/btn_continue24"
                android:layout_marginTop="@dimen/padd"
                android:layout_marginLeft="@dimen/btnm1"
                android:layout_marginRight="@dimen/btnm1"
                android:layout_marginBottom="@dimen/padd"
                android:layout_height="31dp"
                android:text="Confirm Now"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:background="@color/maingreen"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
