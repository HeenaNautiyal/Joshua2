<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:id="@+id/image1"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:layout_below="@+id/image1"
        android:orientation="vertical"
        android:id="@+id/main"
        >
        <!--Layout1-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:id="@+id/inner1"
            android:background="@color/darkgreen"
            android:weightSum="1">

              <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textChem"
                android:text="Chemist"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="28dp"
                android:textAllCaps="true"
                android:gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content"
            android:id="@+id/inner2"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:weightSum="1"
            android:layout_weight="1.40">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv4"
                android:textSize="20dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/text_shadow"
                android:text="CHEMIST DETAILS:"/>
            <View
                android:id="@+id/SplitLine_hor3"
                android:layout_width="match_parent"
                android:layout_height= "1dp"
                android:layout_below="@+id/message"
                android:layout_marginTop="10dp"
                android:background="@color/text_shadow" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:descendantFocusability="beforeDescendants">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="@dimen/btnm1"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingRight="15dp"
                    android:descendantFocusability="afterDescendants">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:weightSum="3"
                android:layout_height="match_parent">

                <!--Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="left"
                    android:weightSum="2"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="139dp"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="18dp"
                        android:textColor="@color/text_shadow"
                        android:text="Name: "/>
                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:textSize="18dp"
                        android:textColor="@color/text_shadow"
                        android:text="Heena"/>
                      </LinearLayout>
                </LinearLayout>

                       <!--    Phone Number-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:paddingRight="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="139dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="18dp"
                            android:textColor="@color/text_shadow"
                            android:text="Address:"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/number"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18dp"
                        android:textColor="@color/text_shadow"
                        android:text="1234567890"/>
                </LinearLayout>
</LinearLayout>
             <!--   Address-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="8dp"
                    android:weightSum="2"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="139dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="18dp"
                            android:textColor="@color/text_shadow"
                            android:text="City:"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/Address"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18dp"
                        android:textColor="@color/text_shadow"
                        android:text="Hno.94 sec.37"/>
                </LinearLayout>
                    </LinearLayout>
                <!--     city-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="left"
                    android:weightSum="2"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="139dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="18dp"
                            android:textColor="@color/text_shadow"
                            android:text="State:"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/email1"
                        android:layout_gravity="left"
                        android:textSize="18dp"
                        android:textColor="@color/text_shadow"
                        android:text="Faridabad"/>

                    </LinearLayout>
                </LinearLayout>

                <!--inner layout-->
            </LinearLayout>
                </LinearLayout>
                </FrameLayout>
            </ScrollView>
        </LinearLayout>

<!--button-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/inner2"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Proceed with CHEMIST"
                android:textColor="@color/white"
                android:id="@+id/btn_continue1"
                android:textSize="20dp"
                android:background="@color/darkgreen"/>
        </LinearLayout>
        <!--
                        Image-->

    </LinearLayout>
</RelativeLayout>





