<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:fillViewport="false">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_back"
        android:layout_gravity="center"
        />
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:id="@+id/lay1"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:id="@+id/lay2"
            android:padding="15dp"
            android:layout_marginTop="8dp"
            >

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/ed_lastName"
                android:textColor="#000000"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:hint="First Name"
                android:paddingTop="12dp"
                android:paddingLeft="10dp"
                android:textColorHint="#808080"
                android:gravity="left"
                android:textSize="15dp"
                android:background="@drawable/gradient2"
                android:layout_centerHorizontal="true" />
            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/ed_firstName"
                android:textColor="#000000"
                android:hint="Last Name"
                android:paddingLeft="10dp"
                android:ellipsize="end"
                android:paddingTop="12dp"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:textColorHint="#808080"
                android:background="@drawable/gradient2"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/ed_lastName"
                android:layout_alignLeft="@+id/ed_lastName"
                android:layout_alignStart="@+id/ed_lastName" />


            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/ed_email"
                android:textColor="#000000"
                android:hint="Email"
                android:paddingLeft="10dp"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:paddingTop="12dp"
                android:textColorHint="#808080"
                android:background="@drawable/gradient2"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_below="@+id/ed_firstName"
                android:layout_alignRight="@+id/ed_firstName"
                android:layout_alignEnd="@+id/ed_firstName" />
            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/ed_password"
                android:textColor="#000000"
                android:hint="Password"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:ellipsize="end"
                android:paddingTop="12dp"
                android:textColorHint="#808080"
                android:background="@drawable/gradient2"
                android:gravity="left"
                android:textSize="15dp"
                android:layout_below="@+id/ed_email"
                android:layout_alignLeft="@+id/ed_email"
                android:layout_alignStart="@+id/ed_email" />

            <Button
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:id="@+id/btn_Submit"
                android:textColor="#ffffff"
                android:background="#000000"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_below="@+id/ed_password"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>