<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.heena.testingfirebasecloud.Search">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:id="@+id/lay1"
      android:background="@drawable/gradient2"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:id="@+id/imgback"
                android:background="@drawable/back2_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.01">
             <EditText
                android:layout_width="match_parent"
                android:id="@+id/ed_search"
                android:hint="Search..."
                android:textColorHint="#d3d3d3"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="45dp"
            android:layout_alignParentRight="true"
            android:layout_height="42dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="2dp"
                android:id="@+id/search"
                android:scaleType="fitCenter"
                android:src="@drawable/seacrh"/>
        </LinearLayout>
    </LinearLayout>



    <ListView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lay1"
        android:layout_height="wrap_content"
        android:id="@+id/list"
        />

    ImageView
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:id="@+id/search"
        android:scaleType="fitXY"
        android:src="@drawable/search_black"
        android:layout_alignBottom="@+id/lay1"
        android:layout_toRightOf="@+id/lay1"
        android:layout_toEndOf="@+id/lay1" />
</RelativeLayout>
